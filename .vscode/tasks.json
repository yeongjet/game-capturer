{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "\"C:/Program Files/Microsoft Visual Studio/2022/Enterprise/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "build-network-direct",
            "command": "cl.exe /c /Zi /EHsc /nologo /Fd${workspaceFolder}/target/ /Fo${workspaceFolder}/target/ ${workspaceFolder}/network-direct/*.cpp && lib.exe /OUT:${workspaceFolder}/target/nd2.lib ${workspaceFolder}/target/*.obj",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "编译 network-direct 并生成 nd2.lib"
        },
        {
            "type": "shell",
            "label": "build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/Fd${workspaceFolder}/target/",
                "/EHsc",
                "/nologo",
                "/I${workspaceFolder}/network-direct",
                "/Fo${workspaceFolder}/target/",
                "/Fe${workspaceFolder}/target/launcher.exe",
                "${workspaceFolder}/screen-capturer/launcher.cpp",
                "${workspaceFolder}/screen-capturer/server.cpp",
                "/link",
                "/LIBPATH:${workspaceFolder}/target",
                "ws2_32.lib",
                "nd2.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": ["build-network-direct"]
        }
    ],
    "version": "2.0.0"
}